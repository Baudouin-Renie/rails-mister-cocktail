<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group form-input">
    <%= f.input :description, placeholder: 'Ex.: 20ml, 2 tablespoons, 5 inches, 1 cup, etc.' %>
  </div>

  <div class="form-group form-input">
    <%= f.association :ingredient, collection: Ingredient::INGREDIENTS, prompt: "Choose an ingredient" %>
  </div>

  <%= f.submit "Add to recipe", class: 'form-button' %>
<% end %>
