<%= simple_form_for(@cocktail) do |f| %>
  <div class="form-group form-input">
    <%= f.input :name, placeholder: '. . .' %>
  </div>

  <div class="form-group form-input">
    <%= f.input :small_description, placeholder: '. . .' %>
  </div>

  <div class="form-group form-photo">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <%= f.submit "Create a new cocktail", class: 'form-button' %>
<% end %>
